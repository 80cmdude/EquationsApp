<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquationApp.AboutPage"
             xmlns:resx="clr-namespace:EquationApp.Properties">
  <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15" Padding="20,20,20,20">
    <Label Style="{StaticResource secondaryPageTitle}" Text="{x:Static resx:AppResources.lblAboutUs}" />
    <Button Text="Feedback" Clicked="MailToFeedback" Style="{StaticResource primaryNavButton}" />
    <Button Clicked="NavigateToPaguCo" Style="{StaticResource primaryNavButton}" Text="{x:Static resx:AppResources.uchuu}" />
  </StackLayout>
</ContentPage>