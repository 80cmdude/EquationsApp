<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquationApp.MainPage"
             Title="Paguco"
             xmlns:me="clr-namespace:EquationApp;assembly=EquationApp">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15" Padding="20,20,20,20">
        <Label Text="Equations" VerticalOptions="Center" HorizontalOptions="Center" Style="{StaticResource primaryPageTitle}">
          <Label.Effects>
            <me:UnderlineEffect />
          </Label.Effects>
        </Label>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="5">
          <Button Text="Mechanics" Clicked="NavigatePageMechanics" Style="{StaticResource primaryNavButton}" />
          <Button Text="Electricity" Clicked="NavigatePageElectricity" Style="{StaticResource primaryNavButton}" />
        </StackLayout>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>