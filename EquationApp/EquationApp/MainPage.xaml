<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquationApp.MainPage"
             xmlns:resx="clr-namespace:EquationApp.Properties"
             Title="Paguco">
  <MasterDetailPage.Master>
    <ContentPage Title="SideMenu" BackgroundColor="#FFFCF9">
      <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="15" >
          <BoxView Color="#FF4C3B" HorizontalOptions="FillAndExpand" VerticalOptions="Start" HeightRequest="90" />
          <Button Text="Home" Style="{StaticResource primaryNavButton}" Clicked="NavigateHomePage" />
          <Button Text="About" Style="{StaticResource primaryNavButton}" Clicked="NavigatePageAbout" />
        </StackLayout>
      </ContentPage.Content>
    </ContentPage>
  </MasterDetailPage.Master>
</MasterDetailPage>
